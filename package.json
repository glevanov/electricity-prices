{
  "name": "electricity-prices",
  "description": "Visualizes electricity prices in Malm√∂",
  "scripts": {
    "dev": "pnpm vite",
    "build": "pnpm vite build",
    "build:gh-pages": "pnpm vite build --base /electricity-prices/",
    "lint": "pnpm run lint:prettier && pnpm run lint:eslint",
    "lint:prettier": "prettier --write src",
    "lint:eslint": "eslint --fix src",
    "lint:setup-hooks": "simple-git-hooks"
  },
  "author": "Grigoriy Levanov",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glevanov/electricity-prices.git"
  },
  "type": "module",
  "license": "MIT",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{css}": [
      "prettier --write",
    ]
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "simple-git-hooks": "^2.9.0",
    "vite": "^5.0.2"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "svelte": "^4.2.7"
  }
}
