{
  "name": "electricity-prices",
  "description": "Visualizes electricity prices in Malm√∂",
  "scripts": {
    "dev": "pnpm vite",
    "build": "pnpm vite build",
    "build:gh-pages": "pnpm vite build --base /electricity-prices/",
    "lint": "pnpm run lint:prettier && pnpm run lint:eslint && pnpm run lint:tsc",
    "lint:ci": "pnpm run lint:prettier-check && pnpm run lint:eslint && pnpm run lint:tsc",
    "lint:prettier": "prettier --write src",
    "lint:prettier-check": "prettier --check src",
    "lint:eslint": "eslint --fix src",
    "lint:tsc": "tsc --noEmit",
    "lint:setup-hooks": "simple-git-hooks",
    "test": "vitest --run"
  },
  "author": "Grigoriy Levanov",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glevanov/electricity-prices.git"
  },
  "type": "module",
  "license": "MIT",
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged && pnpm run lint:tsc"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "3.0.2",
    "@testing-library/svelte": "5.2.9",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.46.1",
    "happy-dom": "20.0.11",
    "lint-staged": "16.2.7",
    "prettier": "3.7.3",
    "prettier-plugin-svelte": "3.4.0",
    "simple-git-hooks": "2.9.0",
    "typescript": "5.9.3",
    "vite": "7.2.2",
    "vitest": "4.0.7"
  },
  "dependencies": {
    "date-fns": "4.1.0",
    "svelte": "4.2.20"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
